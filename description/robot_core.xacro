<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro" />

    <material name = "white">
        <color rgba="1 1 1 1" />
    </material>

    <material name = "orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name = "blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name = "black">
        <color rgba="0 0 0 1" />
    </material>
    <!--BASE LINK -->
    <link name = "base_link">
     
    </link>
    <!--CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.1143 0 0" />
    </joint>
    
    <link name="chassis">
        <visual>
            <origin xyz="0.1143 0 0.05" />
            <geometry>
                <box size="0.2286 0.097 0.1" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.1143 0 0.05" />
            <geometry>
                <box size="0.2286 0.097 0.1" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.2286" y="0.097" z="0.1">
            <origin xyz ="0.1143 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!--LEFT BACK WHEEL LINK -->

    <joint name="left_back_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="left_back_wheel" />
            <origin xyz="-0.0381 0.061 0" rpy="-${pi/2} 0 0" />
            <axis xyz="0 0 1" />
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03175" length="0.025" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03175" length="0.025" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03175" length="0.025">
            <origin xyz ="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--RIGHT BACK WHEEL LINK -->

    <joint name="right_back_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="right_back_wheel" />
            <origin xyz="-0.0381 -0.061 0" rpy="${pi/2} 0 0" />
            <axis xyz="0 0 -1" />
    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03175" length="0.025" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03175" length="0.025" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03175" length="0.025">
            <origin xyz ="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--LEFT FRONT WHEEL LINK -->

    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel" />
        <origin xyz="0.0381 0.061 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03175" length="0.025" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03175" length="0.025" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03175" length="0.025">
            <origin xyz ="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--RIGHT FRONT WHEEL LINK -->

    <joint name="right_front_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="right_front_wheel" />
            <origin xyz="0.0381 -0.061 0" rpy="${pi/2} 0 0" />
            <axis xyz="0 0 -1" />
    </joint>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03175" length="0.025" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03175" length="0.025" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03175" length="0.025">
            <origin xyz ="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
  
</robot>